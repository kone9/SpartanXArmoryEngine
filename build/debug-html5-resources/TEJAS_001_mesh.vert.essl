#version 100

uniform mat3 N;
uniform float texUnpack;
uniform mat4 WVP;

attribute vec4 pos;
varying vec3 wnormal;
attribute vec2 nor;
varying vec2 texCoord;
attribute vec2 tex;

void main()
{
    vec4 spos = vec4(pos.xyz, 1.0);
    wnormal = normalize(N * vec3(nor, pos.w));
    texCoord = tex * texUnpack;
    gl_Position = WVP * spos;
}

